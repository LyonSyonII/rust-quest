---
import type { Langs } from "@i18n/_langs";
import Card from "./Card.astro";
import CodeBlock from "./CodeBlock/CodeBlock.astro";

export type Props = {
  id?: string;
  question?: string;
  code?: string;
  errorMsg?: string;
  placeholder?: string;
  showLineNumbers?: boolean;
  editable?: boolean;
  lang?: Langs;
  skipButton?: boolean;
};

const { question, code, ...other } = Astro.props;
---

<Card title={question}>
  <CodeBlock {...other} code={code?.trim()} />
</Card>
